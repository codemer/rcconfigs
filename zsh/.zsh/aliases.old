#!/usr/local/bin/zsh

# stuff for every os
alias add-key='ssh-add $HOME/.ssh/id_dsa'

alias cd..="cd .."
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias /="cd /"

alias md="mkdir"
alias rd="rmdir"
alias cls="clear"
alias d='dirs -v'
alias j='jobs -l'
alias s='screen -DR'
alias h='history'
alias x='startx &; logout'

# ls command
if [[ $OSNAME = "FreeBSD" || $OSTYPE = "darwin7.0" || $OSTYPE = "Darwin" ]]; then
	LSCOLOROPT='-G'
elif [[ $OSNAME = "Linux" || $OSTYPE = "cygwin" ]]; then
	LSCOLOROPT='--color=auto'
fi
alias ll="ls -lhF $LSCOLOROPT"
alias la="command ls -lhFa $LSCOLOROPT"
alias lf="command ls -F $LSCOLOROPT"
alias dir="command ls -AlF $LSCOLOROPT"
alias l="command ls -AsF $LSCOLOROPT"

# random junk
alias longmont-library='telnet 204.133.207.247'

if [[ $OSTYPE = "cygwin" ]]; then
    GVIM=`which gvim`
	if [[ $? = 0 ]]; then
		gvim () { \
            if [[ "z$*" = "z" ]] ; then \
                $GVIM ; \
            else  \
                CPATH=`cygpath -m -- $*`; \
                $GVIM $CPATH ;\
            fi \
        }
	fi
fi
